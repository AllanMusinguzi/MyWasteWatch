<%- include("../common/head.ejs") %>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
  body {
    background: #fff;
  }
</style>
<%- include("../common/navbar.ejs") %>
<br><br>
    <div class="flex justify-center items-center h-full" style="margin: 7.5% 30% 7.5% 30%">
      <div class="rounded-lg shadow-lg p-8 max-w-md w-full" style="padding: 40px; align-items: center;">
        <header class="mb-6">
          <h1 class="text-2xl font-bold text-center">Driver Login</h1>
        </header>
        <form action="/driver/login_process" method="POST">
          <div class="mb-4">
            <label for="email" class="block font-bold mb-2">Email:</label>
            <input type="email" id="email" name="email" required
              class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200" style="width: 100%;">
          </div>
          <div class="mb-6">
            <label for="password" class="block font-bold mb-2">Password:</label>
            <input type="password" id="password" name="password" required
              class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200">
          </div>
          <br>
          <div class="flex justify-center">
            <button type="submit" class="btn" style="background-color: #006400; color: #fff; width: 100%;"><important>Login</important></button>
          </div>
        </form>
      </div>
    </div>
