      <% drivers.forEach(driver=> { %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold mb-2"><%= driver.name %></h2>
        <p class="mb-2"><strong>Email:</strong> <%= driver.email %></p>
        <p class="mb-2"><strong>Phone:</strong> <%= driver.phone %></p>
        <p class="mb-2"><strong>License:</strong> <%= driver.license %></p>
        <p class="mb-2"><strong>Vehicle:</strong> <%= driver.vehicle %></p>
        <p class="mb-2"><strong>Vehicle Type:</strong> <%= driver.vehicleType %></p>
        <button id="driver-<%= driver._id %>" onclick="deleteDriver(event)" class="bg-red-500 text-white py-2 px-4 rounded-full mt-4 hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Delete Driver</button>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<script>

  async function deleteDriver(e) {
    let driverId = e.target.id.split("-")[1];

    let sure = confirm("Are you sure want to delete driver...")
    let sure_2 = confirm("You cannot revert it back... Continue ?")


    if (sure && sure_2) {
      let response = await fetch("delete-driver?driverId=" + driverId)
      if (response.ok) {
        let data = await response.text();
        alert(data);
        location.reload();
      } else {
        alert("Something went wrong.")
      }
    }
  }


</script>
