<main class="ml-64 p-4">
    <h1 class="text-3xl font-bold">All Drivers</h1>
    <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-300">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border border-gray-300 p-2">Driver Name</th>
                    <th class="border border-gray-300 p-2">Contact</th>
                    <th class="border border-gray-300 p-2">Email</th>
                    <th class="border border-gray-300 p-2">License Number</th>
                    <th class="border border-gray-300 p-2">Vehicle Number</th>
                    <th class="border border-gray-300 p-2">Vehicle Type</th>
                    <th class="border border-gray-300 p-2">Action</th>
                </tr>
            </thead>
            <tbody>
                <% drivers.forEach(driver => { %>
                    <tr>
                        <td class="border border-gray-300 p-2"><%= driver.name %></td>
                        <td class="border border-gray-300 p-2"><%= driver.phone %></td>
                        <td class="border border-gray-300 p-2"><%= driver.email %></td>
                        <td class="border border-gray-300 p-2"><%= driver.license %></td>
                        <td class="border border-gray-300 p-2"><%= driver.vehicle %></td>
                        <td class="border border-gray-300 p-2"><%= driver.vehicleType %></td>
                        <td class="border border-gray-300 p-2">
                            <button onclick="deleteDriver('<%= driver._id %>')" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <% if (pagination.totalPages > 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <% if (pagination.hasPrevPage) { %>
                        <li><a href="/admin/allDrivers?page=<%= pagination.prevPage %>" style="color: #006400;" class="page-link">Previous</a></li>
                    <% } %>
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <li class="<%= i === pagination.currentPage ? 'active' : '' %>">
                            <a href="/admin/allDrivers?page=<%= i %>" style="color: #006400;" class="page-link"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (pagination.hasNextPage) { %>
                        <li><a href="/admin/allDrivers?page=<%= pagination.nextPage %>" style="color: #006400;" class="page-link">Next</a></li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>
</main>

<!-- Modal for confirmation -->
<div id="deleteModal" class="modal hidden">
    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <p>Are you sure you want to delete this driver?</p>
        <button id="confirmDelete" class="btn btn-danger">Delete</button>
        <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
    </div>
</div>

<script>
    let driverIdToDelete;

    function deleteDriver(driverId) {
        driverIdToDelete = driverId; // Store the driver ID to delete
        document.getElementById('deleteModal').classList.remove('hidden'); // Show the modal
    }

    document.getElementById('confirmDelete').onclick = function() {
        // Perform the deletion
        fetch(`/admin/deleteDriver/${driverIdToDelete}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': document.querySelector('input[name="_csrf"]').value // CSRF Token
            }
        })
        .then(response => {
            if (response.ok) {
                window.location.reload(); // Refresh the page after successful deletion
            } else {
                alert('Error deleting driver');
            }
        })
        .catch(error => console.error('Error:', error));
    };

    function closeModal() {
        document.getElementById('deleteModal').classList.add('hidden'); // Hide the modal
    }
</script>

