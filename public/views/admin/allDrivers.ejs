<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-gray-300 border-b rounded-lg dark:border-gray-700 mt-14">
      <div class="container max-w-7xl mx-auto p-6">
          <h1 class="text-center text-5xl mb-6">All Drivers</h1>
          <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700" style="font-size: 16px; color: #000; background-color: #fff;">
                  <thead>
                      <tr>
                          <th class="px-6 py-3 text-left text-xl font-bold text-dark capitalize tracking-wider">Name</th>
                          <th class="px-6 py-3 text-left text-xl font-bold text-dark capitalize tracking-wider">Email</th>
                          <th class="px-6 py-3 text-left text-xl font-bold text-dark capitalize tracking-wider">Phone</th>
                          <th class="px-6 py-3 text-left text-xl font-bold text-dark capitalize tracking-wider">License</th>
                          <th class="px-6 py-3 text-left text-xl font-bold text-dark capitalize tracking-wider">Vehicle</th>
                          <th class="px-6 py-3 text-left text-xl font-bold text-dark capitalize tracking-wider">Vehicle Type</th>
                          <th class="px-6 py-3 text-left text-xl font-bold text-dark capitalize tracking-wider">Actions</th>
                      </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200 dark:bg-white dark:divide-gray-700">
                      <% drivers.forEach(driver => { %>
                      <tr>
                          <td class="px-6 py-4 whitespace-nowrap text-lg font-bold text-gray-900 dark:text-dark"><%= driver.name %></td>
                          <td class="px-6 py-4 whitespace-nowrap text-lg text-dark dark:text-dark"><%= driver.email %></td>
                          <td class="px-6 py-4 whitespace-nowrap text-lg text-dark dark:text-dark"><%= driver.phone %></td>
                          <td class="px-6 py-4 whitespace-nowrap text-lg text-dark dark:text-dark"><%= driver.license %></td>
                          <td class="px-6 py-4 whitespace-nowrap text-lg text-dark dark:text-dark"><%= driver.vehicle %></td>
                          <td class="px-6 py-4 whitespace-nowrap text-lg text-dark dark:text-dark"><%= driver.vehicleType %></td>
                          <td class="px-6 py-4 whitespace-nowrap text-lg text-dark dark:text-dark">
                              <button id="driver-<%= driver._id %>" onclick="deleteDriver(event)" class="bg-red-700 text-white py-1 px-3 capitalize rounded-full focus:outline-none focus:bg-red-800">Delete</button>
                          </td>
                      </tr>
                      <% }); %>
                  </tbody>
              </table>
          </div>
      </div>
  </div>
</div>

<script>
  function deleteDriver(event) {
      event.preventDefault();

      const driverId = event.target.id.replace('driver-', '');

      if (confirm('Are you sure you want to delete this driver?')) {
          fetch(`/drivers/${driverId}`, {  //make a request to the server
              method: 'DELETE',
              headers: {
                  'Content-Type': 'application/json',
              },
          })
          .then(response => {
              if (response.ok) {
                  event.target.closest('tr').remove();
              } else {
                  alert('Failed to delete driver.');
              }
          })
          .catch(error => {
              console.error('Error:', error);
              alert('An error occurred while deleting the driver.');
          });
      }
  }
</script>

