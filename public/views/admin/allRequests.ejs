<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-gray-300 border-b rounded-lg dark:border-gray-700 mt-14" style="font-size: 16px;">
      <div class="container max-w-7xl mx-auto p-6" style="max-height: fit-content;">
          <h2 class="text-2xl font-bold mb-6">Previous Requests</h2>
          <div class="flex">
              <div class="mb-4">
                  <label for="filter" class="mr-2 font-semibold">Filter by status:</label>
                  <select id="filter"
                      class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200">
                      <option value="all">All</option>
                      <option value="pending" selected>Pending</option>
                      <option value="rejected">Rejected</option>
                      <option value="resolved">Resolved</option>
                  </select>
              </div>
              <div class="mb-4 ml-6">
                  <label for="driverFilter" class="mr-2 font-semibold">Filter by Driver:</label>
                  <select id="driverFilter"
                      class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200">
                      <option value="all">All</option>
                      <% drivers.forEach((driver)=> { %>
                          <option value="<%= driver.name %>">
                              <%= driver.name %>
                          </option>
                          <% }) %>
                  </select>
              </div>
          </div>
          <div class="overflow-x-auto">
              <table class="w-full table-auto">
                  <thead class="bg-gray-200">
                      <tr>
                          <th class="px-4 py-2">Name</th>
                          <th class="px-4 py-2">Email</th>
                          <th class="px-4 py-2">Address</th>
                          <th class="px-4 py-2">Request Type</th>
                          <th class="px-4 py-2">Time</th>
                          <th class="px-4 py-2">Status</th>
                          <th class="px-4 py-2">Assigned Driver</th>
                          <th class="px-4 py-2">Assign Driver</th>
                          <th class="px-4 py-2">Unassign Driver</th>
                          <th class="px-4 py-2">Reject Request</th>
                          <th class="px-4 py-2">Message</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% requests.forEach((item, index)=> { %>
                          <tr class="border-b hover:bg-gray-100">
                              <td class="px-4 py-2">
                                  <%= item.name %>
                              </td>
                              <td class="px-4 py-2">
                                  <%= item.email %>
                              </td>
                              <td class="px-4 py-2">
                                  <%= item.address %>
                              </td>
                              <td class="px-4 py-2">
                                  <%= item.request_type %>
                              </td>
                              <td class="px-4 py-2 text-sm">
                                  <%= item.time %>
                              </td>
                              <td id="status" class="px-4 py-2">
                                  <%= item.status %>
                              </td>
                              <td id="assignedDriver" class="px-4 py-2">
                                  <%= item.assignedDriver ? item.assignedDriver : "None" %>
                              </td>
                              <td class="px-4 py-2">
                                  <select onchange="changeDriver(event)" value="Saurabh" name="selectdriver"
                                      class="selectdriver w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200">
                                      <option>- -</option>
                                      <% drivers.forEach((driver)=> { %>
                                          <option requestId="<%= item._id %>" driverId="<%= driver._id %>">
                                              <%= driver.name %>
                                          </option>
                                          <% }) %>
                                  </select>
                              </td>
                              <td class="px-4 py-2">
                                  <button onclick="unAssignDriver(event)" requestId="<%= item._id %>"
                                      class="bg-red-700 text-white py-1 px-3 capitalize rounded focus:outline-none focus:bg-red-800" style="padding: 2.5px;">Unassign
                                    </button>
                              </td>
                              <td class="px-4 py-2">
                                  <button onclick="rejectRequest(event)" requestId="<%= item._id %>"
                                    class="bg-red-700 text-white py-1 px-3 capitalize rounded focus:outline-none focus:bg-red-800" style="padding: 2.5px;">Reject</button>
                              </td>
                              <td class="px-4 py-2">
                                  <div class="truncate">
                                      <%= item.message.length> 20 ? item.message.slice(0, 20) + '...' :
                                          item.message %>
                                          <% if (item.message.length> 20) { %>
                                              <p style="color: #006400; padding: 2.5px; text-transform: capitalize;"
                                                  onclick="showFullMessage('<%= item.message %>')">Show
                                                  more</p>
                                              <% } %>
                                  </div>
                              </td>
                          </tr>
                          <% }) %>
                  </tbody>
              </table>
          </div>

      </div>

      <!-- Modal -->
      <div id="modal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title"
          role="dialog" aria-modal="true">
          <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
              <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true">
              </div>
              <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
              <div
                  class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
                  <div class="sm:flex sm:items-start">
                      <div
                          class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 sm:mx-0 sm:h-10 sm:w-10">
                          <svg class="h-6 w-6" style="color: #006400;" xmlns="http://www.w3.org/2000/svg" fill="none"
                              viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                      </div>
                      <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                          <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Message
                          </h3>
                          <div class="mt-2">
                              <p class="text-sm text-gray-500" id="modal-message"></p>
                          </div>
                      </div>
                  </div>
                  <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                      <button type="button"
                          class="w-full inline-flex justify-center capitalize border border-transparent shadow-sm px-4 py-2 text-base font-medium text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm" style="background-color: #006400;"
                          onclick="closeModal()">Close</button>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>

<div id="processing">

</div>


<script>
  function showFullMessage(message) {
      const modalMessage = document.getElementById('modal-message');
      modalMessage.textContent = message;
      const modal = document.getElementById('modal');
      modal.classList.remove('hidden');
  }

  function closeModal() {
      const modal = document.getElementById('modal');
      modal.classList.add('hidden');
  }


  // Adding filter 
  const filterSelect = document.getElementById('filter');
  const tableRows = document.querySelectorAll('tbody tr');

  filterSelect.addEventListener('change', function () {
      const selectedStatus = this.value;
      tableRows.forEach(row => {

          const status = row.querySelector('#status').textContent.trim();
          if (selectedStatus === 'all' || status == selectedStatus) {
              row.style.display = '';
          } else {
              row.style.display = 'none';
          }
      });
  });


  const driverFilterSelect = document.getElementById('driverFilter');

  driverFilterSelect.addEventListener('change', function () {
      const selectedStatus = this.value;
      console.log(selectedStatus)
      tableRows.forEach(row => {
          const assignedDriver = row.querySelector('#assignedDriver').textContent.trim();
          if (selectedStatus === 'all' || assignedDriver == selectedStatus) {
              row.style.display = '';
          } else {
              row.style.display = 'none';
          }
      });
  });

  // By default show only pending requests
  tableRows.forEach(row => {
      const status = row.querySelector('#status').textContent.trim();
      console.log(status)
      if (status === 'pending') {
          row.style.display = '';
      } else {
          row.style.display = 'none';
      }
  });



  function changeDriver(e) {
      var selectedIndex = event.target.selectedIndex;

      if (selectedIndex > 0) { // This condition will prevent the first
          var selectedOption = event.target.options[selectedIndex];
          var requestId = selectedOption.getAttribute('requestId');
          var driverId = selectedOption.getAttribute('driverId');

          let processing = document.getElementById("processing")
          processing.style.display = "unset"


          fetch("/admin/assign-driver?driverId=" + driverId + "&requestId=" + requestId)
              .then((response) => response.json())
              .then((result) => {
                  processing.style.display = "none";
                  alert(result.msg);

                  if (result.isOK) {
                      let assignedDriver = e.target.parentNode.parentNode.querySelector("#assignedDriver");
                      assignedDriver.innerText = result.driverName
                  }
              })
      }
  }


  function unAssignDriver(e) {
      let requestId = e.target.getAttribute("requestId");
      let processing = document.getElementById("processing")
      processing.style.display = "unset"

      fetch("/admin/unassign-driver?requestId=" + requestId)
          .then((response) => response.json())
          .then((result) => {
              processing.style.display = "none";
              alert(result.msg)
              let assignedDriver = e.target.parentNode.parentNode.querySelector("#assignedDriver");
              assignedDriver.innerText = "None"
          })
  }


  function rejectRequest(e) {
      let requestId = e.target.getAttribute("requestId");
      fetch("/admin/reject-request?requestId=" + requestId)
          .then((response) => response.json())
          .then((result) => {
              processing.style.display = "none";
              alert(result.msg);

              let status = e.target.parentNode.parentNode.querySelector("#status");
              status.innerText = "rejected";
          })
  }
</script>