<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login - MyWaste Management System</title>
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            clifford: '#da373d',
          }
        }
      }
    }
  </script>

  <!-- Bootstrap and FontAwesome -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background-color: #f5f5f5;
    }

    .content {
      flex: 1 0 auto;
    }

    header {
      margin-bottom: 20px;
    }

    h1 {
      color: #006400;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #000;
    }

    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #006400;
      border-radius: 5px;
    }

    button.btn {
      display: block;
      width: 100%;
      padding: 10px;
      font-size: 16px;
      background-color: #006400;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button.btn:hover {
      background-color: #004d00;
    }

    .form-footer {
      text-align: center;
      margin-top: 15px;
    }

    .form-footer a {
      color: #006400;
      text-decoration: none;
    }

    .form-footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <!-- Include Navbar -->
  <%- include("../common/navbar.ejs") %>

  <!-- Login Form Container -->
  <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="rounded-lg shadow-lg p-5 bg-white" style="max-width: 400px; width: 100%;">
      <header class="mb-4 text-center">
        <h1 class="text-2xl font-bold">Admin Login</h1>
      </header>

      <!-- Login Form -->
      <form action="/admin/login_process" method="post">
        <!-- CSRF Token Input -->
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required
            class="form-control px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200">
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required
            class="form-control px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200">
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-block">Login</button>
        </div>
      </form>

      <div class="form-footer">
        <p><a href="#">Forgot Password?</a></p>
      </div>
    </div>
  </div>

  <!-- Include Footer -->
  <%- include('../common/footer.ejs') %>

  <!-- Bootstrap JS, Popper.js, and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
