<div class="p-4 sm:ml-64">
  <div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-3xl p-8 mb-5">
      <h1 class="text-3xl text-center font-bold my-10">My Dashboard</h1>

      <hr class="my-10">

      <div class="grid grid-cols-2 gap-x-20">
        <div>
          <h2 class="text-2xl font-bold mb-4">Request Statistics</h2>
          <div class="grid grid-cols-2 gap-4">
            <div class="col-span-2">
              <div class="p-4 bg-blue-100 rounded-xl">
                <div class="font-bold text-xl text-dark leading-none">Total Requests</div>
                <div class="mt-5">
                  <p
                    class="inline-flex items-center justify-center py-2 px-12 rounded-xl bg-white text-dark text-lg font-extrabold transition">
                    <%= result.total_requests %>
                  </p>
                </div>
              </div>
            </div>
            <div class="p-4 bg-yellow-100 rounded-xl text-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_pending %>
              </div>
              <div class="mt-2 text-xl">Pending Requests</div>
            </div>
            <div class="p-4 bg-yellow-100 rounded-xl text-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_resolved %>
              </div>
              <div class="mt-2 text-xl">Completed Request</div>
            </div>
            <div class="col-span-2">
              <div class="p-4 bg-blue-100 rounded-xl text-dark">
                <div class="mt-2 text-2xl font-semibold">
                  <%= result.total_unassigned_driver_requests %>
                </div>
                <div class="mt-2 text-xl">Unassinged driver on requests</div>
              </div>
            </div>
          </div>


          <h2 class="text-2xl font-bold mb-4 mt-8">Vehicle's Statistrics</h2>
          <div class="grid grid-cols-2 gap-4">
            <div class="p-4 bg-blue-100 rounded-xl ttext-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_trucks %>
              </div>
              <div class="mt-2 text-xl">Total Trucks</div>
            </div>
            <div class="p-4 bg-yellow-100 rounded-xl ttext-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_cars %>
              </div>
              <div class="mt-2 text-xl">Total Cars</div>
            </div>
            <div class="p-4 bg-yellow-100 rounded-xl ttext-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_van %>
              </div>
              <div class="mt-2 text-xl">Total Vans</div>
            </div>
            <div class="p-4 bg-blue-100 rounded-xl ttext-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_motorcycle %>
              </div>
              <div class="mt-2 text-xl">Total Motorcycles</div>
            </div>
          </div>

        </div>
        <div>
          <h2 class="font-semibold text-3xl mb-3 mt-2">Request Types</h2>
          <div class="space-y-4">
            <div class="p-4 border rounded-xl text-dark space-y-2">
              <div class="flex justify-between">
                <div class="mt-2 text-2xl font-semibold">
                  <%= result.total_pickup_request %>
                </div>
              </div>
              <p>Pickup requests</p>
            </div>
            <div class="p-4 border rounded-xl text-dark space-y-2">
              <div class="flex justify-between">
                <div class="mt-2 text-2xl font-semibold">
                  <%= result.total_complaint_request %>
                </div>
              </div>
              <p>Complaint request</p>
            </div>
            <div class="p-4 border rounded-xl text-gray-800 space-y-2">
              <div class="flex justify-between">
                <div class="mt-2 text-2xl font-semibold">
                  <%= result.total_recycling_request %>
                </div>
              </div>
              <p>Recycling requests</p>
            </div>
            <div class="p-4 border rounded-xl text-dark space-y-2">
              <div class="flex justify-between">
                <div class="mt-2 text-2xl font-semibold">
                  <%= result.total_other_request %>
                </div>
              </div>
              <p>Others requests</p>
            </div>
          </div>

          <h2 class="text-2xl font-semibold mb-4 mt-8">More Statistics</h2>
          <div class="grid grid-cols-2 gap-4">
            <div class="p-4 bg-blue-100 rounded-xl text-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_drivers %>
              </div>
              <div class="mt-2 text-xl">Total Drivers</div>
            </div>
            <div class="p-4 bg-blue-100 rounded-xl text-dark">
              <div class="mt-2 text-2xl font-semibold">
                <%= result.total_users %>
              </div>
              <div class="leading-none" style="font-size: large;">Total Users</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript to toggle sidebar on small screens -->
<script>
  const toggleBtn = document.getElementById('toggle-btn');
  const sidebar = document.getElementById('logo-sidebar');

  toggleBtn.addEventListener('click', () => {
    sidebar.classList.toggle('show');
  });
</script>

