<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-gray-300 border-b rounded-lg dark:border-gray-700 mt-14" style="font-size: 16px;">
    <div class="max-w-7xl mx-auto">
      <div id="responseModal" class="hidden fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg p-6">
          <h2 id="modalTitle" class="text-lg font-bold mb-4">Response</h2>
          <p id="modalMessage"></p>
          <button id="closeModal"
            class="mt-4 text-white font-bold py-2 px-4 rounded-full" style="background-color: #006400;">Close</button>
        </div>
      </div>

      <div class="container max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6">Add New Driver</h1>
        <form id="driverForm" method="POST">
          <div class="mb-4">
            <label for="name" class="block text-dark font-bold mb-2">Driver Name:</label>
            <input type="text" id="name" name="name"
              class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring"
              required>
          </div>
          <div class="mb-4">
            <label for="email" class="block text-dark font-bold mb-2">Email:</label>
            <input type="text" id="email" name="email"
              class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:ring-blue-200"
              required>
          </div>
          <div class="mb-4">
            <label for="phone" class="block text-dark font-bold mb-2">Phone Number:</label>
            <input type="text" id="phone" name="phone"
              class="w-full px-3 py-2 border focus:outline-none focus:ring focus:ring-blue-200"
              required>
          </div>
          <div class="mb-4">
            <label for="license" class="block text-dark font-bold mb-2">Driver License:</label>
            <input type="text" id="license" name="license"
              class="w-full px-3 py-2 border focus:outline-none focus:ring focus:ring-blue-200"
              required>
          </div>
          <div class="mb-4">
            <label for="vehicle" class="block text-dark font-bold mb-2">Vehicle Number:</label>
            <input type="text" id="vehicle" name="vehicle"
              class="w-full px-3 py-2 border focus:outline-none focus:ring focus:ring-blue-200"
              required>
          </div>
          <div class="mb-4">
            <label for="vehicleType" class="block text-dark font-bold mb-2">Vehicle Type:</label>
            <select id="vehicleType" name="vehicleType"
              class="w-full px-3 py-2 border focus:outline-none focus:ring"
              required>
              <option value="">Select Vehicle Type</option>
              <option value="Truck">Truck</option>
              <option value="Van">Van</option>
              <option value="Car">Car</option>
              <option value="Motorcycle">Motorcycle</option>
            </select>
          </div>
          <div class="mb-4">
            <label for="password" class="block text-dark font-bold mb-2">Password:</label>
            <input type="password" id="password" name="password"
              class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring"
              required>
          </div>
          <div class="mb-6">
            <label for="confirmPassword" class="block text-dark font-bold mb-2">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword"
              class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring"
              required>
          </div>
          <div class="flex justify-center">
            <input type="submit" value="Add Driver"
              class="text-white font-bold py-2 px-4 rounded-full" style="background-color: #006400;">
          </div>
        </form>
      </div>  
    </div>    
    </div>
  </div>
</div>

  <script>
    const driverForm = document.getElementById('driverForm');

    const responseModal = document.getElementById('responseModal');
    const modalTitle = document.getElementById('modalTitle');
    const modalMessage = document.getElementById('modalMessage');
    const closeModalBtn = document.getElementById('closeModal');

    driverForm.addEventListener('submit', async (event) => {
      event.preventDefault();
      const form = document.forms.driverForm;

      const formData = new FormData(form);

      const formDataObject = {};

      // Convert form data to object
      formData.forEach((value, key) => {
        formDataObject[key] = value;
      });


      const response = await fetch('/admin/createDriver', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json' // Specify content type as JSON
        },
        body: JSON.stringify(formDataObject)
      });

      const responseData = await response.text();


      modalTitle.textContent = 'Response';
      modalMessage.textContent = responseData;
      responseModal.classList.remove('hidden');
    });

    closeModalBtn.addEventListener('click', () => {
      responseModal.classList.add('hidden');
      location.reload()
    });
  </script>