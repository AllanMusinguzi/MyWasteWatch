<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin - MyWasteWatch Management Information System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .navbar.nav-menu {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 70px;
            background-color: #006400;
            z-index: 9999;
            padding: 10px;
            box-sizing: border-box;
            font-family: 'Ubuntu', sans-serif;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            color: #fff;
            font-size: 24px;
            font-weight: bold;
        }

        .navbar-brand img {
            max-height: 40px;
            margin-right: 10px;
        }

        .profile-dropdown {
            position: relative;
        }

        .profile-image-container {
            width: 50px;
            height: 50px;
            overflow: hidden;
            border-radius: 50%;
            cursor: pointer;
        }

        .profile-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .dropdown-menu {
            width: 300px;
            padding: 20px;
        }

        .profile-actions {
            margin-top: 15px;
        }

        .profile-actions button {
            width: 100%;
            margin-bottom: 10px;
            text-align: left;
        }

        #profileImageModal .modal-dialog {
            max-width: 600px;
        }

        #profileImageModal .modal-body {
            text-align: center;
        }

        #profileImageModal img {
            max-width: 100%;
            max-height: 70vh;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg nav-menu">
        <div class="container-fluid">
            <a href="/" class="navbar-brand">
                <img src="/images/bin-2.png" alt="Logo" />
                <span>MyWasteWatch</span>
            </a>
            <div class="ms-auto">
                <div class="profile-dropdown">
                    <div class="profile-image-container" data-bs-toggle="dropdown">
                        <img id="navProfileImage" class="profile-image" src="<%= (typeof admin !== 'undefined' && admin.profile_image) ? admin.profile_image : '/images/default-profile.png' %>" alt="Profile Image">
                    </div>
                    <div class="dropdown-menu dropdown-menu-end">
                        <div class="text-center mb-3">
                            <img id="dropdownProfileImage" class="profile-image" src="<%= (admin && admin.profile_image) ? admin.profile_image : '/images/default-profile.png' %>" alt="Profile Image" style="width: 100px; height: 100px;">
                        </div>
                        <h6 class="dropdown-header">Name: <%= admin ? admin.name : 'Guest' %></h6>
                        <p class="dropdown-item-text">Email: <%= admin ? admin.email : 'No email' %></p>
                        <p class="dropdown-item-text">Role: Administrator</p>
                        <div class="profile-actions">
                            <button class="btn btn-outline-primary" onclick="viewProfilePhoto()">
                                <i class="fas fa-eye me-2"></i> View Profile Photo
                            </button>
                            <button class="btn btn-outline-success" onclick="uploadProfilePhoto()">
                                <i class="fas fa-upload me-2"></i> Upload Profile Picture
                            </button>
                            <button class="btn btn-outline-danger" onclick="removeProfilePhoto()">
                                <i class="fas fa-trash-alt me-2"></i> Remove Profile Photo
                            </button>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <a href="/change-password" class="btn btn-warning btn-sm">Change Password</a>
                            <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Profile Image Modal -->
    <div class="modal fade" id="profileImageModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Profile Photo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <img id="modalProfileImage" src="" alt="Profile Image">
                </div>
            </div>
        </div>
    </div>

    <!-- File Input (hidden) -->
    <input type="file" id="fileInput" style="display: none;" accept="image/*">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        function handleFetchResponse(response) {
            if (!response.ok) {
                return response.text().then(text => {
                    throw new Error(text || response.statusText);
                });
            }
            return response.json();
        }

        function showAlert(message, type = 'error') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'error' ? 'danger' : 'success'} alert-dismissible fade show`;
            alertDiv.role = 'alert';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            document.body.insertBefore(alertDiv, document.body.firstChild);

            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }

        function uploadProfilePhoto() {
            document.getElementById('fileInput').click();
        }

        document.getElementById('fileInput').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (!file) return;

            if (confirm('Do you want to upload this profile picture?')) {
                const formData = new FormData();
                formData.append('profile_image', file);
                formData.append('_csrf', '<%= csrfToken %>');

                fetch('/profile/upload', {
                    method: 'POST',
                    body: formData
                })
                .then(handleFetchResponse)
                .then(data => {
                    updateProfileImage(data.imageUrl);
                    showAlert('Profile image uploaded successfully.', 'success');
                })
                .catch(error => {
                    console.error('Error uploading image:', error);
                    showAlert('Error uploading the image: ' + error.message);
                });
            }
        });

        function removeProfilePhoto() {
            if (confirm('Are you sure you want to remove the profile photo? This will reset to the default image.')) {
                fetch('/profile/remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': '<%= csrfToken %>'
                    },
                    body: JSON.stringify({})
                })
                .then(handleFetchResponse)
                .then(data => {
                    updateProfileImage(data.defaultImageUrl);
                    showAlert('Profile image removed successfully.', 'success');
                })
                .catch(error => {
                    console.error('Error removing image:', error);
                    showAlert('Error removing the image: ' + error.message);
                });
            }
        }

        function updateProfileImage(imageUrl) {
            document.getElementById('navProfileImage').src = imageUrl;
            document.getElementById('dropdownProfileImage').src = imageUrl;
        }
    </script>
</body>
</html>
