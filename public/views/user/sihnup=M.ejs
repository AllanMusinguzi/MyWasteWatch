<section class="container d-flex justify-content-center vh-100" style="font-family: 'Ubuntu', sans-serif;">
    <div class="card signup-card border-0 p-4">         

        <div class="card-body">
            <p class="text-center" style="color: black;">Create an account</p> 
            
            <form action="/signup_process" method="post">

                <!-- Full Name -->
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" name="fullName" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label" style="color: black">Email</label>
                    <input type="email" id="email" name="email" required class="form-control border-success" style="width: 100%;">
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label for="number" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="number" placeholder="Enter your phone number" name="number" required>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label for="autocomplete" class="form-label">Address</label>
                    <input type="text" class="form-control" id="autocomplete" placeholder="Search for your address" name="address" required>
                </div>

                <!-- Hidden fields for storing address components -->
                <input type="hidden" id="continent" name="continent">
                <input type="hidden" id="country" name="country">
                <input type="hidden" id="region" name="region">
                <input type="hidden" id="city" name="city">
                <input type="hidden" id="district" name="district">
                <input type="hidden" id="town" name="town">
                <input type="hidden" id="subcounty" name="subcounty">
                <input type="hidden" id="village" name="village">
        
                <!--Password-->
                <div class="mb-3">
                    <label for="password" class="form-label" style="color: black;">Password</label>
                    <div class="input-group">
                        <input type="password" id="password" name="password" required class="form-control border-success">
                        <div class="input-group-append">
                            <button type="button" id="togglePassword" class="btn btn-outline-secondary">
                                <i class="fa fa-eye" style="color:#006400"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn" style="background-color: #006400; color: #fff; width: 100%;"><important>Sign up</important></button> 
            </form>

            <div class="text-center mt-4">
                <small style="color: black;">Already have an account? <a href="/login" style="color: #006400;"><important>Login</important></a></small> 
            </div>
        </div>
    </div>
</section>
<br><br>
