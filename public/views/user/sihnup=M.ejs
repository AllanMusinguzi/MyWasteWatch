<style>
    body {
        background-color: #fff;
    }

    /* Adjust the card width */
    .signup-card {
        max-width: 700px; /* Wider width for the signup card */
        margin: 0 auto; /* Center the card */
        box-shadow: 0 5px 10px rgba(0,0,0,0.9);
    }
</style>
