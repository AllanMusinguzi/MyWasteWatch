<%- include("../common/head.ejs") %>  
<%- include("../common/nav.ejs") %>
<link rel="stylesheet" href="/css/styles.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>

<!--Toggle Button-->
