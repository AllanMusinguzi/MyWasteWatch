<!%- include("../common/head.ejs") %>
<%- include("../common/navigation/navUser.ejs") %>

<link rel="stylesheet" href="/css/styles.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  
<aside class="logo-sidebar" aria-label="Sidebar">
  <div class="h-full px-3 pb-4 overflow-y-auto">
    <ul class="space-y-2 font-medium">
      <li>
        <a href="/home" class="sidebar-link">
          <i class="fas fa-home"></i> <!-- Font Awesome Home Icon -->
          <span class="flex-1 ms-3">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/my-requests" class="sidebar-link">
          <i class="fas fa-tasks"></i> <!-- Font Awesome Tasks Icon -->
          <span class="flex-1 ms-3">All Requests</span>
        </a>
      </li>
      <li>
        <a href="/raise-a-request" class="sidebar-link">
          <i class="fas fa-plus-circle"></i> <!-- Font Awesome Plus Circle Icon -->
          <span class="flex-1 ms-3">Create Request</span>
        </a>
      </li>
    </ul>
  </div>
</aside>

<div class="p-4 sm:ml-64">
  <div class="p-4 mt-40 mb-0">
    <div class="container max-w-9xl mx-auto p-6 bg-white rounded-xl shadow-md">
      <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Previous Requests</h2>
      
      <!-- Filter by Request Type -->
      <div class="mb-4">
        <label for="requestType" class="block font-medium mb-2 text-xl text-dark">Filter by Request Type</label>
        <select id="requestType" class="w-full px-3 py-2 border text-lg border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200 bg-gray-100">
          <option value="">All</option>
          <option value="Pickup">Pickup</option>
          <option value="Recycling">Recycling</option>
          <option value="Complaint">Complaint</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <!-- Conditional display if there are requests -->
      <% if (requests.length > 0) { %>
        <div class="overflow-x-auto rounded-md shadow-md">
          <table class="w-full table-auto bg-white">
            <thead class="bg-gray-100 border-b border-gray-300">
              <tr>
                <th class="px-4 py-3 text-left font-semibold text-dark">Name</th>
                <th class="px-4 py-3 text-left font-semibold text-dark">Email</th>
                <th class="px-4 py-3 text-left font-semibold text-dark">Address</th>
                <th class="px-4 py-3 text-left font-semibold text-dark">Request Type</th>
                <th class="px-4 py-3 text-left font-semibold text-dark">Time</th>
                <th class="px-4 py-3 text-left font-semibold text-dark">Message</th>
                <th class="px-4 py-3 text-left font-semibold text-dark">Status</th>
              </tr>
            </thead>
            <tbody>
              <% requests.forEach((item) => { %>
                <tr class="border-b border-gray-300 hover:bg-gray-100">
                  <td class="px-4 py-3 text-dark" style="font-size: 15px;"><%= item.name %></td>
                  <td class="px-4 py-3 text-dark" style="font-size: 15px;"><%= item.email %></td>
                  <td class="px-4 py-3 text-dark" style="font-size: 15px;"><%= item.address %></td>
                  <td class="px-4 py-3 text-dark" style="font-size: 15px;"><%= item.request_type %></td>
                  <td class="px-4 py-3 text-dark" style="font-size: 15px;"><%= item.time %></td>
                  <td class="px-4 py-3 text-dark" style="font-size: 15px;">
                    <div class="truncate">
                      <%= item.message.length > 20 ? item.message.slice(0, 20) + '...' : item.message %>
                      <% if (item.message.length > 20) { %>
                        <p class="text-green-500 hover:text-green-700 capitalize cursor-pointer" onclick="showFullMessage('<%= escape(item.message) %>')" style="cursor: pointer;">Show more</p>
                      <% } %>
                    </div>
                  </td>
                  <td class="px-4 py-3 text-lg">
                    <span class="px-2 py-1 bg-blue-200 capitalize rounded-md" style="font-size: 15px;"><%= item.status %></span>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-dark">No previous requests found.</p>
      <% } %>

      <!-- Modal for Showing Full Message -->
      <div id="modal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
          <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
          <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
          <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
            <div class="sm:flex sm:items-start">
              <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 sm:mx-0 sm:h-10 sm:w-10">
                <svg class="h-6 w-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                <h3 class="text-lg leading-6 font-medium text-dark" id="modal-title">Message</h3>
                <div class="mt-2">
                  <p class="text-sm text-dark" id="modal-message"></p>
                </div>
              </div>
            </div>
            <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
              <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm" onclick="closeModal()">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
      <script>
        function showFullMessage(message) {
          const modalMessage = document.getElementById('modal-message');
          modalMessage.textContent = unescape(message); //unescape decodes the message safely
          const modal = document.getElementById('modal');
          modal.classList.remove('hidden'); 
        }

        function closeModal() {
          const modal = document.getElementById('modal');
          modal.classList.add('hidden');  // Hides the modal when closed
        }

        // For filtering by request type
        const requestType = document.getElementById('requestType');
        const tableRows = document.querySelectorAll('tbody tr');

        requestType.addEventListener('change', () => {
          const selectedRequestType = requestType.value;

          tableRows.forEach(row => {
            const requestTypeCell = row.querySelector('td:nth-child(4)');
            const requestTypeValue = requestTypeCell.textContent.trim();

            if (selectedRequestType === '' || requestTypeValue === selectedRequestType) {
              row.style.display = '';
            } else {
              row.style.display = 'none';
            }
          });
        });
      </script>

    </div>
  </div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

