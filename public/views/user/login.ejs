<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
  body {
    background: #fff;
  }
</style>
<%- include("../common/navbar.ejs") %>
<br><br>
<section class="container d-flex justify-content-center vh-100" style="font-family: 'Ubuntu', sans-serif;">
  <div class="card p-4 border-0" style="box-shadow: 0 5px 10px rgba(0,0,0,0.9); margin: 5% 33.33%; align-items:center"> 
    <div class="card-body">
      <div class="mb-6">
        <h2 class="card-title text-center" style="color: #006400;">Welcome back to <span style="color: #000;">MyWasteWatch</span></h2>
        <p class="text-muted text-center" style="color: #000;">Log in</p> 
      </div>
      <form action="/login_process" method="post">
        <div class="mb-4">
          <label for="email" class="form-label" style="color: #000;">Email</label> 
          <input type="email" id="email" name="email" placeholder="name@example.com" class="form-control border-success" style="border-color: #000;" required>
        </div>
        <div class="mb-4" style="position: relative;">
          <label for="password" class="form-label" style="color: #000;">Password</label> 
          <input type="password" id="password" name="password" placeholder="Enter password" class="form-control border-success" style="color: #000;" required> 
          <button type="button" id="toggle-password" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; color: #006400;">
              <i id="toggle-icon" class="fa fa-eye" style="color: #006400;"></i>
          </button>
        </div>
        <button type="submit" class="btn" style="background-color: #006400; color: #000; width: 100%;"><important>Login</important></button> 
      </form>
      <div class="text-center mt-4">
        <small style="color: #000;">Donâ€™t have an account? <a href="/signup"><important>Sign up</important></a></small> 
      </div>
    </div>
  </div>
</section>
<br>
<%- include("../common/footer.ejs") %>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
  document.getElementById('toggle-password').addEventListener('click', function() {
      const passwordInput = document.getElementById('password');
      const toggleIcon = document.getElementById('toggle-icon');
      
      if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          toggleIcon.classList.remove('fa-eye');
          toggleIcon.classList.add('fa-eye-slash');
      } else {
          passwordInput.type = 'password';
          toggleIcon.classList.remove('fa-eye-slash');
          toggleIcon.classList.add('fa-eye');
      }
  });
</script>